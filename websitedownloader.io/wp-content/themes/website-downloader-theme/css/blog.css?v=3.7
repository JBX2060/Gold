* {
	margin: 0;
	padding: 0;
}
.container {
	max-width: 1000px;
}
h1 {
	font-size: 26px;
}
.comments-template h3{
	font-size: 18px;
}
.post-single {
    font-size: 16px;
    line-height: 20px;
}
img.size-full {
	max-width: 100%;
    height: auto;
}
.header {
	margin-top: 20px;
    border-bottom: 2px dashed #eaeaea;
    padding-bottom: 19px;
    margin-bottom: 2px;
}
.row {
	margin-left: 0px;
	margin-right: 0px;
}
.row div {
	padding-left: 0;
	padding-right: 0;
}
.post-data {
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
    padding: 3px 0;
    color: #a2a2a2;
    margin: 10px 0px 20px;
}
.sidebar h2 {
	font-size: 18px !important;
    background-color: #eaeaea;
    padding: 8px;
}
ol {
	margin-left: 15px;
}
ol li {
	margin-bottom: 15px;
}
.footer {
	border-top: 5px solid #eaeaea;
    padding-top: 15px;
    padding-bottom: 15px;
    margin-bottom: 25px;
    border-bottom: 1px solid #eaeaea;
    margin-top: 35px;
}
img.logo {
	width: 50px;
}
.title {
    font-size: 18px;
    margin-left: 7px;
}
.title a.main {
	color: #666666;
}
.logo-main {
	border: 0;
}
.row h2 {
	font-size: 21px;
}
.post-single.blog {
	border-bottom: 1px solid #eaeaea;
}
.image-blog-per img {
	margin-bottom: 15px;
    border: 1px solid #eaeaea;
    padding: 7px;
    border-radius: 3px;
}
.download-sidebar {
	margin-top: 15px;
}